<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Grab handle -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@drawable/bs_handle" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Rides"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/headingcolor"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorted by nearest to you"
            android:textSize="13sp"
            android:textColor="@color/textColor"/>
    </LinearLayout>

    <!-- List with fixed height so buttons stay visible -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="4dp"/>

    <!-- Sticky action row -->
    <!-- Sticky action row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <Button
            android:id="@+id/btnCloseSheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close"
            android:backgroundTint="@color/backgroundColor"
            android:textColor="@color/headingcolor"/>

        <View android:layout_width="8dp" android:layout_height="1dp"/>

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select"
            android:enabled="false"
            android:backgroundTint="@color/headingcolor"
            android:textColor="@color/textColor"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:layout_marginTop="30dp">


    <!-- MapView -->

    <!-- Header with Menu & Profile -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="10dp"
        android:gravity="center_vertical"

        android:background="@color/backgroundColor"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/taxi_pic"
            android:contentDescription="Menu"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Taxi Finder"
            android:textColor="@color/headingcolor"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:layout_marginTop="60dp"
        android:elevation="6dp"
        >

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        android:iconifiedByDefault="false"
        android:queryHint="Start Location"
        app:layout_constraintTop_toBottomOf="parent"
        android:editTextColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:background="@color/backgroundColor"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/dropSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp"
            android:iconifiedByDefault="false"
            android:queryHint="Choose Destination"
            app:layout_constraintTop_toBottomOf="parent"
            android:editTextColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:background="@color/backgroundColor"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </LinearLayout>
</FrameLayout>
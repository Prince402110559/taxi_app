<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/taxi_pic"
            android:contentDescription="App Logo"
            android:layout_marginTop="24dp"/>

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RankMate"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/headingcolor"
            android:layout_marginTop="16dp"/>

        <!-- Version -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/headingcolor"
            android:layout_marginVertical="24dp"/>

        <!-- About Text -->
        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RankMate is a South African minibus taxi companion app designed to make public transport easier and smarter. It helps passengers quickly find available taxis to their desired destination by automatically detecting their current location or allowing them to manually enter one. The app guides users to the correct taxi rank, estimates travel time, and provides fare estimates — helping you plan your trip with confidence.\n\nWhile RankMate does not allow online taxi bookings or payments yet, it serves as an essential travel guide and information hub. The built-in community forum lets passengers share updates, experiences, and ask questions, fostering communication between daily commuters.\n\nOur goal is to bring technology closer to the South African taxi industry — making travel simpler, safer, and more predictable for everyone."
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:lineSpacingExtra="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/headingcolor"
            android:layout_marginVertical="24dp"/>

        <!-- Developer Info -->
        <TextView
            android:id="@+id/developerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Group 23"
            android:textSize="14sp"
            android:textColor="@color/headingcolor"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: group23Devs@gmail.com"
            android:textSize="14sp"
            android:textColor="@color/headingcolor"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
